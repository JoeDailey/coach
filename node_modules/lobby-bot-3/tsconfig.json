{
  "compilerOptions": {
    "outDir": "bin",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2019",
    "esModuleInterop": true,
    "lib": [
      "es2019"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "index.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "bin"
  ]
}